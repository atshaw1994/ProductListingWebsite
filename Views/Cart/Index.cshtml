@model IEnumerable<ProductListingWebsite.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="mb-4 d-flex align-items-center gap-2">
        <span class="material-symbols-rounded">shopping_bag</span>
        Your Shopping Cart
    </h2>

    @if (!Model.Any())
    {
        <div class="text-center py-5 shadow-sm bg-light rounded">
            <span class="material-symbols-rounded" style="font-size: 64px;">shopping_cart_off</span>
            <p class="fs-4 mt-3">Your cart is empty.</p>
            <a asp-controller="Products" asp-action="Storefront" class="btn btn-primary px-4">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive bg-white shadow-sm rounded">
                    <table class="table align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th class="text-end">Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <img src="@item.ImageUrl" alt="@item.ProductName"
                                                 class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                            <span class="fw-bold">@item.ProductName</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="badge bg-secondary p-2">@item.Quantity</div>
                                    </td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td class="text-end fw-bold">@item.Total.ToString("C")</td>
                                    <td class="text-end">
                                        <a asp-action="Remove" asp-route-id="@item.ProductId" class="text-danger">
                                            <span class="material-symbols-rounded">delete</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Order Summary</h5>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal</span>
                            <span>@Model.Sum(x => x.Total).ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping</span>
                            <span class="text-success">FREE</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fs-4 fw-bold mb-4">
                            <span>Total</span>
                            <span class="text-primary">@Model.Sum(x => x.Total).ToString("C")</span>
                        </div>
                        <button class="btn btn-success w-100 py-3 fw-bold">Proceed to Checkout</button>
                        <a asp-controller="Products" asp-action="Index" class="btn btn-link w-100 mt-2 text-decoration-none">
                            Keep Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>