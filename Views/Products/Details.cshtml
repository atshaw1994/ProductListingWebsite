@model ProductListingWebsite.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Product Details</h1>
</div>

<div class="card h-100 shadow-sm border-secondary" style="width: 250px;">
    @if (!string.IsNullOrEmpty(Html.DisplayFor(model => model.ImageUrl).ToString()))
    {
        <img src="@Html.DisplayFor(model => model.ImageUrl)" class="card-img-top" alt="Image"
             style="width: 250px; height: 250px; object-fit: cover;">
    }
    else
    {
        <div class="bg-light d-flex align-items-center justify-content-center card-img-top" style="height: 250px;">
            <span class="material-symbols-rounded text-muted" style="font-size: 48px;">image</span>
        </div>
    }

    <div class="card-body d-flex flex-column">
        <h5 class="card-title text-truncate">@Html.DisplayFor(model => model.Name)</h5>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="card-text fs-5 fw-bold text-primary mb-0">
                @Html.DisplayFor(model => model.Price)
            </p>
            <small class="text-muted text-end">
                In Stock: @Html.DisplayFor(model => model.StockQty)
            </small>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
