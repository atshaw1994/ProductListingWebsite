@model IEnumerable<ProductListingWebsite.Models.Product>

@{ ViewData["Title"] = "Products"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Store Products</h1>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th class="text-center">Has Image?</th>
            <th class="text-center">In Stock?</th>
            <th class="text-center">Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                <td class="align-middle">@Html.DisplayFor(modelItem => item.Price)</td>
                <td class="align-middle text-center">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <span class="material-symbols-rounded text-success">check_circle</span>
                    }
                    else
                    {
                        <span class="material-symbols-rounded text-danger">cancel</span>
                    }
                </td>
                <td class="align-middle text-center">
                    @if (item.StockQty > 0)
                    {
                        <span class="material-symbols-rounded text-success">check_circle</span>
                    }
                    else
                    {
                        <span class="material-symbols-rounded text-danger">cancel</span>
                    }
                </td>
                <td class="align-middle">
                    <div class="d-flex align-items-center justify-content-center gap-2">
                        @if (item.StockQty > 0)
                        {
                            <a asp-action="DecQty" asp-route-id="@item.Id" class="text-decoration-none text-dark d-inline-flex">
                                <span class="material-symbols-rounded">do_not_disturb_on</span>
                            </a>
                        }
                        <span class="fw-bold">@item.StockQty</span>
                        <a asp-action="IncQty" asp-route-id="@item.Id" class="text-decoration-none text-dark d-inline-flex">
                            <span class="material-symbols-rounded">add_circle</span>
                        </a>
                    </div>
                </td>
                <td class="align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none text-dark"><span class="material-symbols-rounded">edit</span></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark mx-2"><span class="material-symbols-rounded">info</span></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none text-dark"><span class="material-symbols-rounded">delete</span></a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="6" class="p-0">
                <button type="button"
                        class="btn btn-light w-100 py-3 d-flex align-items-center justify-content-center border-top-0"
                        data-bs-toggle="modal"
                        data-bs-target="#createProductModal"
                        style="border-radius: 0 0 8px 8px; transition: 0.2s;"
                        onmouseover="this.style.backgroundColor='#e9ecef'"
                        onmouseout="this.style.backgroundColor='#f8f9fa'">
                    <span class="material-symbols-rounded me-2">add_circle</span>
                    <strong>Add New Product</strong>
                </button>
            </td>
        </tr>
    </tfoot>
</table>

<div class="modal fade" id="createProductModal" tabindex="-1" aria-labelledby="createProductModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createProductModalLabel">New Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @await Html.PartialAsync("_CreateProductPartial", new ProductListingWebsite.Models.Product())
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}