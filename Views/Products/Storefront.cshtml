@model IEnumerable<ProductListingWebsite.Models.Product>

@{
    ViewData["Title"] = "Shop";
}

<h1 class="mb-4">Shop</h1>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            @if (item.StockQty > 0)
            {
                <div class="card h-100 shadow-sm border-secondary">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name"
                             style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center card-img-top" style="height: 250px;">
                            <span class="material-symbols-rounded text-muted" style="font-size: 48px;">image</span>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@item.Name</h5>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <p class="card-text fs-5 fw-bold text-primary mb-0">
                                @Html.DisplayFor(modelItem => item.Price)
                            </p>
                            <small class="text-muted text-end">
                                In Stock: @Html.DisplayFor(modelItem => item.StockQty)
                            </small>
                        </div>

                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark w-100 mb-2">
                                View Details
                            </a>
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id"
                               class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2">
                                <span class="material-symbols-rounded">shopping_cart</span>
                                Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card h-100 bg-secondary-subtle shadow-sm border-secondary-subtle">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name"
                             style="height: 250px; object-fit: cover; opacity: 0.5;">
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center card-img-top" style="height: 250px;">
                            <span class="material-symbols-rounded text-muted" style="font-size: 48px;">image</span>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@item.Name</h5>

                        <p class="card-text fs-5 fw-bold text-secondary">
                            @Html.DisplayFor(modelItem => item.Price)
                        </p>

                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark w-100 mb-2">
                                View Details
                            </a>
                            <a class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center gap-2 disabled">
                                <span class="material-symbols-rounded">shopping_cart_off</span>
                                Out Of Stock
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>