@using ProductListingWebsite.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductListingWebsite</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductListingWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-left: 1rem">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">ProductListingWebsite</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Storefront">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-controller="Cart" asp-action="Index">
                            <span class="material-symbols-rounded me-1">shopping_cart</span>
                            @{
                                // Quick logic to sum up total items
                                var cart = Context.Session.GetJson<List<CartItem>>("Cart");
                                var count = cart?.Sum(x => x.Quantity) ?? 0;
                            }
                            @if (count > 0)
                            {
                                <span class="badge rounded-pill bg-danger">@count</span>
                            }
                        </a>
                    </li>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <partial name="_LoginPartial" />
                    }
                    else
                    {
                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-primary" style="margin-right: 1rem" data-bs-toggle="modal" data-bs-target="#loginModal">
                                Login
                            </button>
                        </li>
                    }
                </ul>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ProductListingWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Welcome Back</h5>
                <button type="button" class="btn-close" data-bs-toggle="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-area="Identity" asp-page="/Account/Login">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                    <div class="mb-3">
                        <label class="form-label">Email address</label>
                        <input name="Input.Email" class="form-control" placeholder="name@example.com" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" name="Input.Password" class="form-control" required />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="Input.RememberMe" class="form-check-input" id="remember">
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>
            </div>
            <div class="modal-footer justify-content-center">
                <p class="mb-0">New here? <a asp-area="Identity" asp-page="/Account/Register">Create an account</a></p>
            </div>
        </div>
    </div>
</div>