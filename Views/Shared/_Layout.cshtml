@using ProductListingWebsite.Helpers
@{
    var cart = Context.Session.GetJson<List<CartItem>>("Cart");
    var count = cart?.Sum(x => x.Quantity) ?? 0;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductListingWebsite</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProductListingWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">ProductListingWebsite</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Storefront">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav d-flex align-items-center">
                        @if (User.Identity!.IsAuthenticated)
                        {
                            <partial name="_LoginPartial" />
                        }
                        else
                        {
                            <li class="nav-item">
                                <button type="button" class="btn btn-outline-primary btn-sm px-3" data-bs-toggle="modal" data-bs-target="#loginModal">
                                    Login
                                </button>
                            </li>
                        }
                        <li class="nav-item me-2">
                            <button type="button" class="nav-link btn btn-link d-flex align-items-center border-0"
                                    data-bs-toggle="modal" data-bs-target="#cartModal">
                                <span class="material-symbols-rounded">shopping_cart</span>
                                @if (count > 0)
                                {
                                    <span class="badge rounded-pill bg-danger ms-1" id="nav-cart-count">@count</span>
                                }
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ProductListingWebsite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginModalLabel">Welcome Back</h5>
                <button type="button" class="btn-close" data-bs-toggle="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-area="Identity" asp-page="/Account/Login">
                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                    <div class="mb-3">
                        <label class="form-label">Email address</label>
                        <input name="Input.Email" class="form-control" placeholder="name@example.com" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" name="Input.Password" class="form-control" required />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="Input.RememberMe" class="form-check-input" id="remember">
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>
            </div>
            <div class="modal-footer justify-content-center">
                <p class="mb-0">New here? <a asp-area="Identity" asp-page="/Account/Register">Create an account</a></p>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-slideout">
        @* Custom class for side-effect *@
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold" id="cartModalLabel">
                    <span class="material-symbols-rounded align-middle me-1">shopping_bag</span>
                    Your Cart
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div id="mini-cart-items" style="max-height: 60vh; overflow-y: auto;">
                    @if (cart == null || !cart.Any())
                    {
                        <div class="text-center py-5">
                            <span class="material-symbols-rounded text-muted" style="font-size: 48px;">shopping_cart_off</span>
                            <p class="mt-2">Your cart is empty</p>
                        </div>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var item in cart)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center py-3" id="mini-row-@item.ProductId">
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="@item.ImageUrl" class="rounded" style="width: 50px; height: 50px; object-fit: cover;">
                                        <div>
                                            <div class="fw-bold text-truncate" style="max-width: 120px;">@item.ProductName</div>
                                            <div class="d-flex align-items-center gap-2 mt-1">
                                                <button class="btn btn-xs btn-outline-secondary lh-1 p-1" onclick="changeQty(@item.ProductId, -1)">
                                                    <span class="material-symbols-rounded" style="font-size: 14px;">remove</span>
                                                </button>
                                                <small class="fw-bold"><span id="mini-qty-@item.ProductId">@item.Quantity</span></small>
                                                <button class="btn btn-xs btn-outline-secondary lh-1 p-1" onclick="changeQty(@item.ProductId, 1)">
                                                    <span class="material-symbols-rounded" style="font-size: 14px;">add</span>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="fw-bold text-primary d-block" id="mini-total-@item.ProductId">@item.Total.ToString("C")</span>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
            <div class="modal-footer d-block bg-light">
                @if (cart != null && cart.Any())
                {
                    <div class="d-flex justify-content-between mb-3">
                        <span class="fw-bold">Subtotal:</span>
                        <span class="fw-bold text-primary fs-5">@cart.Sum(x => x.Total).ToString("C")</span>
                    </div>
                }
                <div class="d-grid gap-2">
                    <a asp-controller="Cart" asp-action="Index" class="btn btn-primary fw-bold">Go To Cart Page</a>
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>